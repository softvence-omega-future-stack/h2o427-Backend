# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
SIGNING_KEY=your-signing-key-here

# Database (PostgreSQL - optional)
# DATABASE_URL=postgresql://user:password@host:port/dbname
# OR individual settings:
# dbname=your_database
# user=your_username
# password=your_password
# host=localhost
# port=5432

# Twilio SMS Configuration
# Get these from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_32_characters
TWILIO_FROM_NUMBER=+1234567890

# OTP Settings
PHONE_OTP_TTL_SECONDS=300

# Stripe (Payment)
STRIPE_TEST_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx
STRIPE_TEST_SECRET_KEY=sk_test_xxxxxxxxxxxxx
STRIPE_TEST_ENDPOINT_SECRET=whsec_xxxxxxxxxxxxx

# Frontend/Mobile App URL (for Stripe redirect after payment)
# For mobile app use deep link: yourapp://
# For web app use: http://localhost:3000 or https://yourdomain.com
FRONTEND_URL=http://localhost:3000
